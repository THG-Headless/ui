---
import "../../tailwind.css";
import fs from "node:fs";
import path from "node:path";
import { parseShadowScheme } from "../../utils/shadowParser";

const cssFilePath = path.resolve("./src/sample-css/shadows.css");
const cssContent = fs.readFileSync(cssFilePath, "utf-8");
const shadows = parseShadowScheme(cssContent);
---

<div class="max-w-7xl mx-auto p-6">
  <h2 class="text-2xl font-bold mb-8 text-black pb-4">Primitive Shadows</h2>
  {
    Object.entries(shadows).map(([key, category]) => (
      <section class="mb-12">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12">
          {category.shadows.map((shadow) => (
            <div class="flex flex-col items-center">
              <div
                class="w-full h-32 bg-zinc-300 rounded-lg "
                style={`box-shadow: var(${shadow.name});`}
              />
              <div class="text-center pt-2">
                <div class="font-mono text-sm text-black mb-1">
                  {shadow.name}
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>
    ))
  }
</div>
