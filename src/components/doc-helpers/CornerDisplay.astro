---
import "../../tailwind.css";
import fs from "node:fs";
import path from "node:path";
import { parseRadiusScheme } from "../../utils/radiusParser";

const cssFilePath = path.resolve("./src/sample-css/corners.css");
const cssContent = fs.readFileSync(cssFilePath, "utf-8");
const { primitiveRadii, semanticRadii } = parseRadiusScheme(cssContent);
---

<div class="max-w-7xl mx-auto p-6">
  <!-- Primitive Radii -->
  <section>
    <h2 class="text-xl font-bold mb-8">Primitive Radii</h2>
    <div class="space-y-4">
      {
        Object.entries(primitiveRadii).map(([key, category]) => (
          <div class="pt-8">
            <h3 class="text-lg font-semibold">{category.name}</h3>
            <div class="flex flex-wrap gap-4">
              {category.radii.map((radius) => (
                <div class="flex flex-col items-center w-[180px] h-[180px] m-2">
                  {/* Radius Demo Box */}
                  <div
                    class="w-full h-2/3 bg-zinc-300 overflow-hidden rounded-2xl"
                    style={{
                      borderRadius: `var(${radius.name})`,
                      display: "block",
                    }}
                  />

                  {/* Info Panel */}
                  <div class="w-full h-1/3 bg-zinc-900 p-3 flex flex-col justify-center items-center">
                    <span class="text-sm font-mono text-white pb-2">
                      {radius.name}
                    </span>
                    <span class="text-sm text-zinc-400">{radius.value}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Semantic Radii -->
  <section>
    <h2 class="text-2xl font-bold mb-8 pt-16">Semantic Radii</h2>
    <div class="space-y-8">
      {
        Object.entries(semanticRadii).map(([key, category]) => (
          <div>
            <h3 class="text-lg font-semibold mb-4 pt-4">{category.name}</h3>
            <table class="w-full">
              <thead>
                <tr class="border-b">
                  <th class="text-left py-2 w-16 px-3">Preview</th>
                  <th class="text-left py-2 px-3">Variable Name</th>
                  <th class="text-left py-2 px-3">Default Value</th>
                  <th class="text-left py-2 px-3 w-[30%]">Description</th>
                </tr>
              </thead>
              <tbody>
                {category.radii.map((radius) => (
                  <tr class="border-b border-zinc-600">
                    <td class="py-3 px-3">
                      <div
                        class="w-8 h-8 bg-zinc-700 overflow-hidden"
                        style={{
                          borderRadius: `var(${radius.name})`,
                          display: "block",
                        }}
                      />
                    </td>
                    <td class="py-3 px-3">
                      <button
                        class="font-mono text-sm hover:text-blue-400 transition-colors"
                        onclick={`navigator.clipboard.writeText('${radius.name}')`}
                      >
                        {radius.name}
                      </button>
                    </td>
                    <td class="font-mono text-sm py-3 px-3">{radius.value}</td>
                    <td class="text-sm py-3 px-3 w-[30%]">
                      {radius.description || "-"}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ))
      }
    </div>
  </section>
</div>
